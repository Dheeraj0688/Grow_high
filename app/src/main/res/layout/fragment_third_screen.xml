<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/statusbar"
        android:layout_width="407dp"
        android:layout_height="55dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/iphone_x__or_newer_"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/skipbtn"
        android:layout_width="90dp"
        android:layout_height="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="61dp"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="811dp"
        android:text="Skip Intro"
        android:textColor="#3A7EB0"
        android:textSize="9dp"
        android:background="@drawable/circular_button_background"
        android:textAllCaps="false"
        />

    <ImageView
        android:layout_width="300dp"
        android:layout_height="251dp"
        android:layout_marginStart="75dp"
        android:layout_marginTop="130dp"
        android:layout_marginEnd="65.1dp"
        android:background="@drawable/bro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="270dp"
        android:layout_height="279dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="36dp"
        android:background="@drawable/white_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="104dp"
        android:layout_marginBottom="224dp"
        android:text="Our Vision"
        android:textColor="@color/white"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:layout_width="238dp"
        android:layout_height="70dp"
        android:layout_marginStart="104dp"
        android:layout_marginBottom="144dp"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/progressbar"
        android:layout_width="62dp"
        android:layout_height="62dp"
        android:layout_marginStart="160dp"
        android:layout_marginBottom="52dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/progress_button__2_"
        />
</androidx.constraintlayout.widget.ConstraintLayout>