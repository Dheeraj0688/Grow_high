<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/statusbar"
        android:layout_width="407dp"
        android:layout_height="55dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/iphone_x__or_newer_"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="168dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="78dp"
        android:layout_marginStart="120dp"
        android:text="Upload Image"
        android:textAllCaps="false"
        android:textAlignment="center"
        android:textSize="24dp"
        />
    <ImageView
        android:id="@+id/uploadselect"
        android:layout_width="342dp"
        android:layout_height="74dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="387dp"
        android:layout_marginStart="33dp"
        android:background="@drawable/primary"
        />
    <ImageView
        android:id="@+id/uploadback"
        android:layout_width="20dp"
        android:layout_height="14.28dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="74dp"
        android:layout_marginStart="17dp"
        android:background="@drawable/_icon__arrow_left_"
        />
    <ImageView
        android:id="@+id/uploadupload"
        android:layout_width="342dp"
        android:layout_height="74dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="478dp"
        android:layout_marginStart="33dp"
        android:background="@drawable/primary1"
        />
<ImageView
    android:id="@+id/galary"
    android:layout_width="215dp"
    android:layout_height="150dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    android:layout_marginTop="199dp"
    android:layout_marginStart="99dp"
    />

</androidx.constraintlayout.widget.ConstraintLayout>