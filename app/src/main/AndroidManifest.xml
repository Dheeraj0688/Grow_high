<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.Dheeraj_Sahu"
        tools:targetApi="31">
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Secondfragment"
            android:label="Second Fragment"
            android:exported="true">
            <intent-filter>
                <action android:name="com.example.dheeraj_sahu.ACTION_OPEN_SECOND_FRAGMENT" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Thirdfragment"
            android:label="Third Fragment"
            android:exported="true">
            <intent-filter>
                <action android:name="com.example.dheeraj_sahu.ACTION_OPEN_THIRD_FRAGMENT" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Upload"
            android:label="Upload Fragment"
            android:exported="true">
            <intent-filter>
                <action android:name="com.example.dheeraj_sahu.ACTION_OPEN_UPLOAD_FRAGMENT" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".User"
            android:label="UserFragment"
            android:exported="true">
            <intent-filter>
                <action android:name="com.example.dheeraj_sahu.ACTION_OPEN_USER_FRAGMENT" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".FeedsActivity"
            android:label="Feed Fragment"
            android:exported="true">
            <intent-filter>
                <action android:name="com.example.dheeraj_sahu.ACTION_OPEN_FEEDS_FRAGMENT" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <uses-library android:name="org.apache.http.legacy" android:required="false"/>


    </application>
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

</manifest>